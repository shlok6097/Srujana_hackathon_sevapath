<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f5f5f5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Image Slider Section -->
        <TextView
            android:text="Featured"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never"
            android:background="@drawable/slider_bg"/>

        <!-- Map Section -->
        <TextView
            android:text="Your Location"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/map_bg"
            android:clipToPadding="false"
            android:clipChildren="false"/>

        <!-- Latest Updates Section -->
        <TextView
            android:text="Latest Updates"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="16dp"/>

        <!-- About Us Section -->
        <TextView
            android:text="About Us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_bg"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Team -->
            <TextView
                android:text="Alpha Geeks"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/team11"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:layout_marginEnd="8dp"/>


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/team2"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:layout_marginEnd="8dp"/>


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/team3"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:layout_marginEnd="8dp"/>


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/team6"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <!-- Vision -->
            <TextView
                android:text="Our Vision"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:text="Streamline citizen interactions with government services through AI-powered platforms, intelligent chatbots, automated application processing, and personalized service recommendations.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"/>

            <!-- Mission -->
            <TextView
                android:text="Our Mission"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:text="Handle routine inquiries, guide citizens through complex procedures, and provide real-time status updates on government services. Ensure efficient and transparent delivery of government programs using digital identity verification and automated benefit distribution systems.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
