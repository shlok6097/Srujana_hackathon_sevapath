<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <!-- Voice selection spinner -->
    <Spinner
        android:id="@+id/voiceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Mic Button -->
    <ImageButton
        android:id="@+id/mic_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/send_button_background"
        android:src="@drawable/ic_mic"
        android:scaleType="centerInside"
        android:padding="20dp"
        android:contentDescription="Start Listening"
        app:tint="@android:color/black" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/thinking_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone" />

    <!-- Transcription Text -->
    <TextView
        android:id="@+id/partial_transcription_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mic_button"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:text="Listening..."
        android:textColor="@android:color/white"
        android:textSize="20sp" />



</RelativeLayout>
