<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Files"
            android:textColor="#1E293B"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/subtitle_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a file type to upload"
            android:textColor="#64748B"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Upload Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="24dp">

            <!-- Image Upload -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_upload_image"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/social_button_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_upload_image"
                            app:tint="@android:color/white"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Image"
                        android:textColor="#1E293B"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PDF Upload -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_upload_pdf"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/social_button_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_upload_pdf"
                            app:tint="@android:color/white"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="PDF"
                        android:textColor="#1E293B"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Video Upload -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_upload_video"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/social_button_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_upload_video"
                            app:tint="@android:color/white"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Video"
                        android:textColor="#1E293B"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- File Name Input -->
        <EditText
            android:id="@+id/etFileName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter File Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="16dp"/>

        <!-- Upload Button -->
        <Button
            android:id="@+id/btnUploadFile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Upload File"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4A90E2"
            android:textColor="@android:color/white"/>

        <!-- Search Box -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search uploaded files..."
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="24dp"
            android:textColor="#1E293B"
            android:textSize="16sp"/>

        <!-- User Management -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Management"
            android:textColor="#1E293B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Full Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnAddUser"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add User"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4A90E2"
            android:textColor="@android:color/white"/>

        <!-- Recently Uploaded -->
        <TextView
            android:id="@+id/title_recent_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recently Uploaded"
            android:textColor="#1E293B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFiles"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_file"/>
    </LinearLayout>
</ScrollView>
